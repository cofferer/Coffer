<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lakmal.coffer.UI.DetailActivity"
    android:paddingLeft="20dp">


    <TextView
        android:id="@+id/lbl_quote_text"
        android:layout_width="368dp"
        android:layout_height="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_quote_attribution" />

    <TextView
        android:id="@+id/lbl_quote_attribution"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_quote_text"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-light"
        android:text="text2"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/im_item_detail" />

    <ImageView
        android:id="@+id/im_item_detail"
        android:layout_width="363dp"
        android:layout_height="197dp"
        android:layout_marginBottom="297dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteY="23dp" />

    <TextView
        android:id="@+id/lbl_off_percent"
        android:layout_width="0dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/lbl_item_detail"
        android:layout_width="371dp"
        android:layout_height="121dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_quote_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
