<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.lakmal.coffer.UI.SignIn">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:textSize="30dp"
        app:layout_constraintHorizontal_bias="0.488" />

    <TextView
        android:id="@+id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="40dp"
        android:hint="user name"
        android:paddingLeft="20dp"
        android:text="user name:"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/e_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/email"
        android:layout_toStartOf="@+id/email"
        android:paddingLeft="20dp"
        android:hint="gmail address" />

    <TextView
        android:id="@+id/p_wrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="23dp"
        android:text="password" />

    <TextView
        android:id="@+id/re_p_wrd"
        android:layout_width="96dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/tour"
        android:paddingLeft="20dp"
        android:layout_toStartOf="@+id/tour"
        android:text="retype- password" />


    <EditText
        android:id="@+id/username"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@+id/u_name"
        android:layout_alignBottom="@+id/u_name"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:hint="enter user name"
        android:paddingLeft="20dp" />


    <EditText
        android:id="@+id/re_password"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignTop="@+id/p_wrd"
        android:ems="10"
        android:hint="at least 5 characters"
        android:inputType="textPassword"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_password"
        android:layout_alignStart="@+id/re_password"
        android:layout_below="@+id/re_password"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="retype password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/email"
        android:layout_width="214dp"
        android:layout_height="46dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/username"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="enter a valid G-Mail"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Tour !!!"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_below="@+id/signUp"
        android:layout_toRightOf="@+id/e_mail"
        android:layout_toEndOf="@+id/e_mail"
        android:layout_marginTop="18dp" />
    <!--
        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="38dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />
    -->
</RelativeLayout>
