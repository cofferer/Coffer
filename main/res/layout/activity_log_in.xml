<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lakmal.coffer.UI.LogIn">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="163dp"
        android:layout_marginTop="40dp"
        android:text="Let's complete your account"
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="165dp"
        android:ems="10"
        android:hint="gmail address here "
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.653" />

    <EditText
        android:id="@+id/password"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="pasword here"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.666" />

    <Button
        android:id="@+id/logIn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginLeft="118dp"
        android:text="Log In to The site"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/singUp" />

    <Button
        android:id="@+id/googleLogIn"
        android:layout_width="186dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginRight="89dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/singUp"
        android:layout_width="166dp"
        android:layout_height="49dp"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="89dp"
        android:text="New User ??? Sign In to the site"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.909"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="186dp"
        android:layout_height="69dp"
        android:text="OR"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="134dp"
        app:layout_constraintHorizontal_bias="0.53" />

</android.support.constraint.ConstraintLayout>
